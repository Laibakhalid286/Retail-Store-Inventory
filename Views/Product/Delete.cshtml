@model ProductModel

@{
    ViewData["Title"] = "Delete Product";
}

<style>

    body, html {
        height: 100%;
        margin: 0;
    }

    .bg-image {
        background: url('/deletebackground.webp') no-repeat center center fixed;
        background-size:contain;
        height: 100vh;
        width: 100vw;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        filter: brightness(0.7);
    }

    .form-overlay {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 12px;
        color: white;
    }

    h2 {
        color: white;
        font-weight: bold;
    }

    .login-container {
        height: 100vh;
    }
</style>

<div class="bg-image"></div>

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4 text-danger">Delete Product</h2>

    <div class="mb-4 border p-3 rounded bg-light">
        <h5 class="fw-bold mb-3 text-center">Product Details</h5>
        <table class="table table-bordered text-center">
            <thead class="table-danger">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Category</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.Price</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h5 class="fw-bold text-center mb-3 text-danger">Are you sure you want to delete this product?</h5>

                <form asp-action="DeleteConfirmed" method="post">           
                    <input type="hidden" asp-for="Id">

                    <!--Delete and Cancel Buttons-->
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger w-48">Delete</button>
                        <a href="@Url.Action("DeleteSearch", "Product")" class="btn btn-secondary w-48">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


