@{
    ViewData["Title"] = "Generate Reports";
}

<style>

    body, html {
        height: 100%;
        margin: 0;
    }

    .bg-image {
        background: url('/report.webp') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        width: 100vw;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        filter: brightness(0.7);
    }

    .form-overlay {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 12px;
        color: black;
    }

    h2 {
        color: black;
        font-weight: bold;
    }

    .login-container {
        height: 100vh;
    }
</style>

<div class="bg-image"></div>

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">Generate Reports</h2>

    <div class="card p-4 shadow">
        <form>
            <!--Report Type-->
            <div class="mb-3">
                <label for="reportType" class="form-label">Report Type</label>
                <select class="form-select" id="reportType">
                    <option selected>Select Report Type</option>
                    <option value="LowStock">Low Stock Report</option>
                     <option value="TotalStock">Total Stock Report</option>
                </select>
            </div>

            <!--Date Range-->
            <div class="mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate">
            </div>
            <div class="mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate">
            </div>

            <!--Generate Report Button-->
            <button type="button" class="btn btn-primary w-100" onclick="goToReport()" >Generate Report</button>
        </form>

        <script>

    function goToReport() {
         var type = document.getElementById("reportType").value;
         var startDate = document.getElementById("startDate").value;
         var endDate = document.getElementById("endDate").value;

            startDate = new Date(startDate);
            endDate = new Date(endDate);

          if (startDate && endDate && startDate > endDate) {
              alert("Start date cannot be after end date.");
              return;
             }

        if (type === "LowStock") {
            window.location = "/Product/LowStock";
        } 
        else if (type === "TotalStock") {
            window.location = "/Product/TotalStock";
        } 
        else {
            alert("Please select a valid report type.");
        }
    }
</script>
    </div>
</div>

