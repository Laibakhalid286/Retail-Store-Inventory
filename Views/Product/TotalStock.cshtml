@model List<retail_store_inventory_2.Models.StockModel>

@{
    ViewData["Title"] = "Total Stock Report";
}

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">Total Stock Report</h2>

    <div class="card p-4 shadow">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Remaining Stock</th>
                    <th>Total Stock Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price</td>
                        <td>@item.RemainingStock</td>
                        <td>@item.TotalStockValue</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

