@model List<ProductModel>

@{
    ViewData["Title"] = "Search Results";
}
<style>

    body, html {
        height: 100%;
        margin: 0;
    }

    .bg-image {
        background: url('/searchresult.webp') no-repeat center center fixed;
        background-size: contain;
        height: 100vh;
        width: 100vw;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        filter: brightness(0.7);
    }

    .form-overlay {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 12px;
        color: black;
    }

    h2 {
        color: black;
        font-weight: bold;
    }

    .login-container {
        height: 100vh;
    }
</style>

<div class="bg-image"></div>

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">Search Results</h2>

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
            </div>
    }
    <!-- Results Table -->
    <div id="productResults" class="card p-4 shadow">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var product in Model)
                    {
                        <tr>
                           <td>@product.Name</td>
                           <td>@product.Category</td>
                           <td>$@product.Price</td>
                           <td>@product.Quantity</td>
                           <td>@(product.Quantity > 0 ? "Available" : "Out of Stock")</td>
                         </tr>
                    }
                }
                else
                {
                    <tr>
                       <td colspan="5" class="text-center">No products found matching your search criteria.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

