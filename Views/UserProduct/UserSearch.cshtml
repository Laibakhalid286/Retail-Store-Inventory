@{
    ViewData["Title"] = "Search & Filter Products";
}

<style>

    body, html {
        height: 100%;
        margin: 0;
    }

    .bg-image {
        background: url('/searchbackground.webp') no-repeat center center fixed;
        background-size: contain;
        height: 100vh;
        width: 100vw;
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        filter: brightness(0.7);
    }

    .form-overlay {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 12px;
        color: black;
    }

    h2 {
        color: black;
        font-weight: bold;
    }

    .login-container {
        height: 100vh;
    }
</style>

<div class="bg-image"></div>

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">Search & Filter Products</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h5 class="fw-bold text-center mb-3">Find Your Product</h5>

                <form action="/UserProduct/SearchResult" method="get">
                    <!--Product Name-->
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="searchProductName" name="name" placeholder="Enter product name" required>
                        <label for="searchProductName">Product Name</label>
                    </div>

                    <!--Category-->
                    <div class="mb-3">
                        <select class="form-select" id="filterCategory" name="category">
                            <option selected>All Categories</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Grocery">Grocery</option>
                        </select>
                    </div>

                    <!--Price Range Filter-->
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="minPrice" placeholder="Min Price" min="0">
                                <label for="minPrice">Min Price</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="maxPrice" placeholder="Max Price" min="0">
                                <label for="maxPrice">Max Price</label>
                            </div>
                        </div>
                    </div>

                    <!--Search Button-->
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>
